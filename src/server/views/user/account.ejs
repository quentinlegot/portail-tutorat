<%- include('../header', {title: "Votre compte", style: "user/account"}) %>

<div class="profil">

    <div class="side_bar">
        <p id="menu">Informations <img id="arrow" src="/static/images/arrow.png" width="20" height="20" style="margin-right: 2vw; float: right;transform: rotate(180deg);"></p>
            <ul id="sub_menu" style="display: none; background-color: #F9FAFC; border-bottom: 1px solid #D3DCE6; margin: 0px; padding: 2vw;">
                <li>Profil</li>
                <li>Vos tutorats</li>
                <li>Vos réservations</li>
            </ul>
    
        <p>Avis postés</p>
        <ul><a href="/disconnect"><li>Se déconnecter</li></a></ul>
    
    </div>

    <div class="photo">

        <img src="/static/images/profil.png">

        <div>
            <h2>Nom: <%=session.nom%></h2>
            <h2>Prénom: <%=session.prenom%></h2> 
            <h2>Diplôme: <%=session.diploma%><h2>
            <h2>Âge: <%=session.age%></h2>
        </div>

        <div class="coordonnees">
            <h2>Adresse Email : <%=session.email%></h2>
    
            <h2>Téléphone : <%=session.number%></h2>
        
            <h2>Présentation :</h2>
            <p><%=session.presentaion%></p>
        
            <ul id="modifier">
                <a href="./account_edit">
                    <button>
                        Modifier le profil
                    </button>
                </a>
            </ul>
    
        </div>

    </div>

</div>

<script>

    document.querySelector("#menu").addEventListener('click', (event) => {
        if(document.querySelector("#sub_menu").style.display === 'none') {
            document.querySelector("#sub_menu").style.display = "block";
            document.querySelector('#arrow').style.transform =  'rotate(0deg)';
        } else {
            document.querySelector("#sub_menu").style.display = "none";
            document.querySelector('#arrow').style.transform =  'rotate(180deg)';
        }
        
    })

</script>

<%- include('../footer') %>
